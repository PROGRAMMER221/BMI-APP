#:kivy 1.10.1
#: import utils kivy.utils

ScreenManager:
    HomeScreen:
        id:home
        name:'home'

<HomeScreen>:
    canvas.before:
        Color:
            rgb : utils.get_color_from_hex('#66FF99')
        
        Rectangle:
            size : self.size
            pos : self.pos

    FloatLayout:
        Image:
            pos_hint : {'top':1, 'left':1}
            size_hint : .5,.1
            source : 'male.png'

        Image:
            pos_hint : {'top':1, 'right':1}
            size_hint : .5,.1
            source : 'female.png'

        Label:
            text : 'Select Your Height'
            font_size : 30
            color : 0,.3,1,1
            size_hint : 1 ,.1
            pos_hint : {'top': .85}

        MDSlider:
            id : height
            min : 90
            max : 250
            value : 150
            size_hint : 1 ,.1
            pos_hint : {'top': .75}
            on_touch_up :
                root.getvalue()

        Label:
            text : 'Enter Your Weight'
            font_size : 30
            color : .6,.3,.9,1
            size_hint : 1 ,.1
            pos_hint : {'top': .68}

        MDCard:
            id : weight
            size : "280dp", "79dp"
            size_hint : None,None
            pos_hint : {'center_x' : .5, 'center_y' : .5}
            
            MDIconButton:
                icon : 'plus'
                user_font_size : "64sp"
                size_hint : .25 ,.1
                pos_hint : {'top': .5}
                on_release:
                    root.increase()

            Label:
                text : str(root.weight) + 'kg'
                font_size : 40
                color : 0,0,0,1
                size_hint : .5 ,.1
                pos_hint : {'top': .5}
            
            MDIconButton:
                icon : 'minus'
                user_font_size : "64sp"
                size_hint : .25 ,.1
                pos_hint : {'top': .5}
                on_release:
                    root.decrease()

        MDRaisedButton:
            md_bg_color : 0,1,0,1
            size_hint : .8, .07
            pos_hint : {'top' : .2, 'center_x' : .5}
            text : 'Calculate BMI'
            on_release:
                root.BMI()